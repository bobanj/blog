- content_for :title do
  Manage Users
- no_robots
%h2 Manage Blog Users
%h3 Current Users
.archives.users
  %ul
    - for user in @users
      %li
        = link_to user.name, edit_user_path(user)
        = link_to user_path(user), :confirm => "Are you sure you want to delete this user?", :method => :delete do
          = image_tag "delete.png", :alt => "delete draft", :title => "delete draft"
- content_for :sidebar do
  .sidebar
    .block-content.user_management
      - link_to "Add new user", new_user_path
      = link_to new_user_path do
        = image_tag "doc_plus.png", :alt => "add user", :title => "add user"
    / block-content
  / sidebar
