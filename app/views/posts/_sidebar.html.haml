- content_for :sidebar do
  .sidebar
    = form_for(@post) do |f|
      #title-container
        = f.text_field :title
        - if @post.new_record?
          %p /1234-title-me-wisely-brave-citizen
      #wmd-container
        #wmd-button-bar
        = f.text_area :markdown, :id => "wmd-input", :cols => "92", :rows => "15"
      .tags
        = f.label :tag_names, 'Tags'
        = f.text_field :tag_names
      %ul.options.form-submit
        - if @post.new_record?
          %li= f.submit "Share your post with the world", :name => "save_post", :confirm => "Are you sure you want to share this post with the world?"
          %li.right= f.submit "Save as draft", :id => "draft_submit", :name => "save_draft"
        - else
          %li.right= f.submit "Update post", :confirm => "Are you sure you want to update this post"
